{
	"semi": true,
	"singleQuote": true,
	"jsxSingleQuote": false,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"printWidth": 80,
	"tabWidth": 2,
	"useTabs": true,
	"endOfLine": "lf",
	"singleAttributePerLine": false,
	"htmlWhitespaceSensitivity": "css",
	"plugins": [
		"prettier-plugin-organize-imports",
		"prettier-plugin-tailwindcss"
	],
	"tailwindFunctions": ["clsx", "cn", "cva"],
	"overrides": [
		{
			"files": ["**/*.yml", "**/*.yaml"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": ["**/*.json", "**/*.jsonc"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": ["**/*.md"],
			"options": {
				"proseWrap": "preserve"
			}
		}
	]
}
